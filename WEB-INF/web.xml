<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.1">

    <!-- Web Application Display Name -->
    <display-name>Nidhi - Personal Finance Manager</display-name>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <!-- Registration Servlet -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlets.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <!-- Dashboard Servlet -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>servlets.DashboardServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/DashboardServlet</url-pattern>
    </servlet-mapping>

    <!-- Add Transaction Servlet -->
    <servlet>
        <servlet-name>AddTransactionServlet</servlet-name>
        <servlet-class>servlets.AddTransactionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddTransactionServlet</servlet-name>
        <url-pattern>/AddTransactionServlet</url-pattern>
    </servlet-mapping>

    <!-- View Transactions Servlet -->
    <servlet>
        <servlet-name>ViewTransactionServlet</servlet-name>
        <servlet-class>servlets.ViewTransactionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewTransactionServlet</servlet-name>
        <url-pattern>/ViewTransactionServlet</url-pattern>
    </servlet-mapping>

    <!-- Session Timeout Configuration -->
    <session-config>
        <session-timeout>30</session-timeout> <!-- 30 minutes -->
    </session-config>

    <!-- Welcome Page -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
